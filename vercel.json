{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/admin",
      "dest": "/truthos-console/index.html"
    },
    {
      "src": "/console", 
      "dest": "/truthos-console/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}